<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:gravity="center_vertical">

<TextView
    android:id="@+id/tv_apptitle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:textColor="#000"
    android:text="Welcome to Easy Park!" />

<ImageView
    android:id="@+id/test_image"
    android:src="@drawable/rsz_car_park"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />


    <Button
        android:id="@+id/btnmap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Find Parking"
        android:background="#7037ca"
        android:layout_centerInParent="true"
        tools:layout_editor_absoluteX="123dp"
        tools:layout_editor_absoluteY="246dp" />

    <Button
        android:id="@+id/button_manager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Park Manager"
        android:layout_centerInParent="true"
        android:layout_below="@id/btnmap"
        android:background="#7037ca"
        android:layout_marginTop="30dp"
        tools:layout_editor_absoluteX="123dp"
        tools:layout_editor_absoluteY="246dp" />


</LinearLayout>